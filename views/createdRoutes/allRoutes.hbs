<h2 class="sr-only">¿Dónde será la próxima aventura?</h2>

<h3 class="text-lg leading-6 font-medium text-gray-900">
          Explora rutas de los demás.
   </h3>
<div class="bg-white">
  <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    
    <div class="grid grid-cols-1 gap-y-4 sm:grid-cols-2 sm:gap-x-6 sm:gap-y-10 lg:grid-cols-3 lg:gap-x-8">
      
      
   
   
   {{!-- 
   <a href="/books/{{this._id}}/edit">Editar</a>
   <form method="POST" action="/books/{{this._id}}/delete">
     <button>Borrar</button>
   </form> --}}
   

   {{#each data}} <!---group relative--->
      <div class=" bg-white border border-gray-200 rounded-lg flex flex-col overflow-hidden">
       

        <div class="aspect-w-3 aspect-h-4 bg-gray-200 group-hover:opacity-75 sm:aspect-none sm:h-96">
          
              <img src="{{this.imgUrl}}" alt="" width="350px" height="auto" class="w-full h-full object-center object-cover sm:w-full sm:h-full">
         
                  </div>

        <div class="flex-1 p-4 space-y-2 flex flex-col">
           <h3 class="text-sm font-medium text-gray-900">
            <a href="#">
              <span aria-hidden="true" class="inset-0"></span>
              {{this.title}}
            </a>
          </h3>
          
          {{!-- <p class="text-sm text-gray-500 sliceText">{{this.description}}</p> --}}
          <div class="flex-1 flex flex-col justify-end">
            <p class="text-sm italic text-gray-500">{{this.state}}</p>
            <p class="text-base font-medium text-gray-900"><b>Dificultad: </b>{{this.hardness}}</p>
          </div>
          <a href="/createdRoutes/{{this._id}}">Ver detalles</a>
        </div>

      </div>
    {{/each}}

      

      <!-- More products... -->
    </div>
  </div>
</div>