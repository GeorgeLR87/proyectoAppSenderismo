<h1>Editar mi ruta creada</h1>
<form action="/createdRoutes/{{data._id}}/editMyRoute" method="POST">
	<label>Título</label>
	<input type="text" name="title" value="{{data.title}}" />

	<br />

	<label>Descripción</label>
	<textarea type="text" name="description">
		{{data.description}}
	</textarea>

	<br />

	<label>Autor</label>
	<input type="text" name="author" value="{{data.author}}" />

	<br />

	<label>Rating</label>
	<input type="number" name="rating" value="{{data.rating}}" />

	<br />

	<button>
		Guardar nuevos cambios
	</button>


</form>